<style>
 .pl-1{
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
 }

</style>
<div class="row pb-3">
    @foreach (var product in Model.Items)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow  border-top border-5 rounded" style="background-color: #002b36;">
                        <!-- Image with fixed dimensions and responsive behavior -->
                        <img src="~/images/products/@product.ImageUrl" alt="Product Image"
                             class="card-img-top rounded img-fluid"
                             style="height: 250px; width: 100%; object-fit: cover;" />

                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5" style="color: #fdf6e3; text-transform: uppercase; text-align: center;">
                                    @product.Title
                                </p>
                                <p class="card-title" style="color: #93a1a1; text-align: center;">
                                    by <b>@product.Author</b>
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class="mb-0" style="color: #fdf6e3; text-align: center;">
                                    List Price:
                                    <span class="text-decoration-line-through" style="color: #cb4b16;">
                                        @product.ListPrice.ToString("c")
                                    </span>
                                </p>
                            </div>
                            <div class="pl-1">
                                <p style="color: #fdf6e3; text-align: center;">
                                    As low as:
                                    <span style="color: #b58900;">
                                        @product.Price100.ToString("c")
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details"
                               asp-route-productId="@product.Id"
                               class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
