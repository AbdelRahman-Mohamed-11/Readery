@model Readery.Core.DTOS.LoginDto

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <h2 class="text-center">@ViewData["Title"]</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <form asp-area="Account" asp-controller="Account" asp-action="Login"
                          asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                                <label class="form-check-label" asp-for="RememberMe">Keep me signed in?</label>
                            </div>

                            <!-- Forgot Password Link -->
                            <a asp-action="ForgotPassword" class="link-primary">Forgot Password?</a>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mt-3">Login</button>
                    </form>

                    <div class="text-center mt-3">
                        <span>Don't have an account?</span>
                        <a asp-action="Register" class="link-primary">Register here</a>
                    </div>

                    <hr />

                    <div class="text-center mt-3">
                        <p>Or login with:</p>
                        <!-- Facebook Login Button -->
                        <form asp-area="Account" asp-controller="Account" asp-action="ExternalLogin" method="post" class="mb-2">
                            <input type="hidden" name="provider" value="Facebook" />
                            <button type="submit" class="btn btn-outline-primary w-100 d-flex justify-content-center align-items-center">
                                <i class="bi bi-facebook" style="font-size: 24px;"></i> Facebook
                            </button>
                        </form>
                        <!-- Google Login Button -->

                        <form asp-area="Account" asp-controller="Account" asp-action="ExternalLogin" method="post">
                            <input type="hidden" name="provider" value="Google" />
                            <button type="submit" class="btn btn-outline-danger w-100 d-flex justify-content-center align-items-center">
                                <i class="bi bi-google" style="font-size: 24px;"></i> Google
                            </button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
