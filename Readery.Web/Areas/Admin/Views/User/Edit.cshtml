@using Readery.Core.DTOS
@model UserEditViewModel

<div class="container">
    <h2>Edit User</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Email" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input type="text" name="Name" class="form-control" value="@Model.Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <div class="mb-3">
                <label asp-for="IsActive" class="form-label">Active</label>

                <!-- Checkbox bound to the bool property 'IsActive' in the model -->
                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
            </div>

        </div>

        <div class="mb-3">
            <label class="form-label">Roles</label>
            @foreach (var role in Model.AllRoles)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input"
                           name="SelectedRoles"
                           value="@role"
                    @(Model.SelectedRoles.Contains(role) ? "checked" : "") />
                    <label class="form-check-label">@role</label>
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Add your custom scripts here if necessary
    </script>
}
