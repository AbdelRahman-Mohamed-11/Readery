@using Readery.Core.Pagination
@model PaginatedList<Category>
@if (Model.Items.Count() == 0)
{
    <h1>No Categories Yet</h1>
}
else
{
    <div class="container">
        <div class="row pt-4 bd-2">
            <div class="col-6">
                <h2>Categories</h2>
            </div>

            <div class="col-6 text-end">
                <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
                    <i class="bi bi-plus-circle"></i>
                    <span class="m-1">Create new Category</span>
                </a>
            </div>

        </div>
    </div>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Items.OrderBy(c => c.DisplayOrder))
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.DisplayOrder</td>
                    <td class="text-center">
                        <a class="btn btn-success m-2 " asp-controller="Category" 
                        asp-action="Edit" asp-route-id="@category.Id">
                        <i class="bi bi-pencil-square"></i>
                            <span class="m-1">Edit</span>
                        </a>

                        <a class="btn btn-dark" asp-controller="Category" asp-action="Delete"
                        asp-route-id="@category.Id">
                            <i class="bi bi-trash3-fill"></i>                         
                            <span class="m-1">Delete</span>
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
