@using Readery.Core.Models.viewModels
@model CompanyViewModel

<h1>Edit</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <label asp-for="Name" class="pb-1">Name</label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="State" class="pb-1">State</label>
        <input type="text" class="form-control" asp-for="State">
        <span asp-validation-for="State" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="StreetAddress" class="pb-1">Street Address</label>
        <input type="text" class="form-control" asp-for="StreetAddress">
        <span asp-validation-for="StreetAddress" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PostalCode" class="pb-1">Postal Code</label>
        <input type="number" class="form-control" asp-for="PostalCode">
        <span asp-validation-for="PostalCode" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PhoneNumber" class="pb-1">Phone Number</label>
        <input type="number" class="form-control" asp-for="PhoneNumber">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-6">
            <button class="btn btn-primary form-control" type="submit">Save Changes</button>
        </div>

        <div class="col-6">
            <a class="btn btn-secondary form-control" asp-controller="Company" asp-action="Index">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {    
    <partial name="_ValidationScriptsPartial" />
}
