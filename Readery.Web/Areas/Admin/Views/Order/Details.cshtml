@using Readery.Core.Models
@using Readery.Core.Statics
@model Order
<form method="post">
    <input asp-for="Id" hidden />
    <br />
    <div class="container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0">
                <div class="container row">
                    <div class="col-12 d-none d-md-block col-md-6 pb-1">
                        <i class="fas fa-shopping-cart"></i> &nbsp; Order Summary
                    </div>
                    <div class="col-12 col-md-4 offset-md-2 text-right">
                        <a asp-action="Index" class="btn btn-outline-info form-control btn-sm">Back to Orders</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-primary">PickUp Details:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Name</div>
                                <div class="col-9">
                                    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                                    {
                                        <input asp-for="Name" type="text" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input readonly asp-for="Name" type="text" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Phone</div>
                                <div class="col-9">
                                    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                                    {
                                        <input asp-for="PhoneNumber" type="text" class="form-control" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input readonly asp-for="PhoneNumber" type="text" class="form-control" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Address</div>
                                <div class="col-9">
                                    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                                    {
                                        <input asp-for="StreetAddress" type="text" class="form-control" />
                                        <span asp-validation-for="StreetAddress" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input readonly asp-for="StreetAddress" type="text" class="form-control" />
                                        <span asp-validation-for="StreetAddress" class="text-danger"></span>
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">City</div>
                                <div class="col-9">
                                    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                                    {
                                        <input asp-for="City" type="text" 
                                        class="form-control" />
                                        <span asp-validation-for="City" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input readonly asp-for="City" type="text"
                                        class="form-control" />
                                        <span asp-validation-for="City" class="text-danger">

                                        </span>
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">State</div>
                                <div class="col-9">
                                    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                                    {
                                        <input asp-for="State" type="text"
                                               class="form-control" />
                                        <span asp-validation-for="State" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input readonly asp-for="State" type="text"
                                               class="form-control" />
                                        <span asp-validation-for="State" class="text-danger">

                                        </span>
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Postal Code</div>
                                <div class="col-9">
                                    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                                    {
                                        <input asp-for="PostalCode" type="text"
                                               class="form-control" />
                                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input readonly asp-for="PostalCode" type="text"
                                               class="form-control" />
                                        <span asp-validation-for="PostalCode" class="text-danger">

                                        </span>
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                                    {
                                        <input asp-for="ApplicationUser.Email" type="text"
                                               class="form-control" />
                                        <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input readonly asp-for="ApplicationUser.Email" type="text"
                                               class="form-control" />
                                        <span asp-validation-for="ApplicationUser.Email" class="text-danger">

                                        </span>
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Order Date</div>
                                <div class="col-9">
                                    
                                        <input readonly value="@Model.OrderDate.ToShortDateString()" type="text"
                                               class="form-control" />
                          
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Carrier</div>
                                <div class="col-9">
                                    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                                    {
                                        <input id="carrier" asp-for="Carrier" type="text"
                                               class="form-control" />
                                    }
                                    else
                                    {
                                        <input readonly asp-for="Carrier" type="text"
                                               class="form-control" />
                                       
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Tracking</div>
                                <div class="col-9">
                                    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                                    {
                                        <input id="trackingNumber" asp-for="TrackingNumber" type="text"
                                               class="form-control" />
                                    }
                                    else
                                    {
                                        <input readonly asp-for="TrackingNumber" type="text"
                                               class="form-control" />
                                     
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Shipping Date</div>
                                <div class="col-9">
                                   
                                    
                                        <input readonly value="@Model.ShippingDate.ToShortTimeString()" type="text"
                                               class="form-control" />
                                   
                                </div>
                            </div>

                            @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                            {
                                <div class="row my-1">
                                    <div class="col-3">Session ID</div>
                                    <div class="col-9">
                                       
                                        
                                            <input readonly asp-for="SessionId" type="text"
                                            class="form-control" />
                                            
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">Payment Intent ID</div>
                                    <div class="col-9">
                                           <input readonly asp-for="PaymentIntentId" type="text"
                                            class="form-control" />
                                          
                                    </div>
                                </div>
                            }

                            <div class="row my-1">
                                @if (Model.SessionId == null)
                                {
                                    <div class="col-3">Payment Due Date</div>
                                    <div class="col-9">

                                        <input readonly asp-for="PaymentDueDate" type="text"
                                        class="form-control" />       

                                    </div>
                                }
                                else
                                {
                                    <div class="col-3">Payment Date</div>
                                    <div class="col-9">
                                        <input readonly asp-for="PaymentDate" type="text" class="form-control" />
                                    </div>
                                }

                            </div>
                            <div class="row my-1">
                                <div class="col-3">Payment Status</div>
                                <div class="col-9">
                                    <input asp-for="PaymentStatus" type="text" readonly class="form-control" />
                                </div>
                            </div>

                            @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                            {
                                <button asp-action="UpdateOrderDetail" type="submit" class="btn btn-warning form-control my-1" >Update Order Details</button>
                            }
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-primary">Order Summary</span>
                            </h4>
                            <label class="btn btn-outline-primary form-control my-2">Order Status - @Model.OrderStatus</label>

                            <ul class="list-group mb-3">
                                @foreach (var item in Model.OrderItems)
                                {
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">

                                                <h6 class="my-0 text-primary">@item.Product.Title</h6>
                                                <small class="text-muted">Price : @item.Price.ToString("c")</small><br />
                                                <small class="text-muted">Quantity : @item.Quantity</small>
                                            </div>
                                            <div class="col-4 text-end">
                                                <p class="text-success">@(item.Quantity * item.Price)</p>
                                            </div>
                                        </div>
                                    </li>

                                }
                                <li class="list-group-item bg-primary">
                                    <div class="row container">
                                        <div class="col-6">
                                            <h5 class="text-white">TOTAL </h5>
                                        </div>
                                        <div class="col-6 text-end">
                                            <h5 class="text-white">@Model.OrderTotal</h5>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                            @if (Model.OrderStatus == OrderStatus.Shipped && Model.PaymentStatus == PaymentStatus.DelayedPayment)
                            {
                                <button asp-action="PayForCompanyUser" type="submit" class="btn btn-success form-control my-1">Pay Now</button>
                            }

                            @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                            {
                                @if (Model.OrderStatus == PaymentStatus.Approved)
                                {
                                    <button asp-route-id="@Model.Id" asp-action="StartProcessing" type="submit" class="btn btn-primary form-control my-1">
                                        Start Processing
                                    </button>
                                }
                                @if (Model.OrderStatus == OrderStatus.InProcess)
                                {
                                    <button onclick="return validateInput()" asp-action="ShipOrder" type="submit" class="btn btn-primary form-control my-1">Ship Order</button>
                                }

                                @if (Model.OrderStatus is not (OrderStatus.Cancelled or OrderStatus.Refunded or OrderStatus.Shipped))
                                {
                                    <button type="submit" asp-action="CancelOrder" asp-route-id="@Model.Id" class="btn btn-danger form-control my-1">Cancel Order</button>
                                }

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script>
        function validateInput() {
            // Validate tracking number input
            if (document.getElementById("trackingNumber").value === "") {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Please enter a tracking number!',
                });
                return false;
            }

            // Validate carrier input
            if (document.getElementById("carrier").value === "") {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Please enter a carrier!',
                });
                return false;
            }

            return true; // Inputs are valid
        }
    </script>
}